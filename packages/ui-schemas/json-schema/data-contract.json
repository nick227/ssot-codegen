{
  "$ref": "#/definitions/data-contract",
  "definitions": {
    "data-contract": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "models": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "list": {
                "type": "object",
                "properties": {
                  "pagination": {
                    "type": "object",
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "cursor",
                          "offset"
                        ]
                      },
                      "maxPageSize": {
                        "type": "integer",
                        "exclusiveMinimum": 0,
                        "maximum": 1000,
                        "default": 100
                      },
                      "defaultPageSize": {
                        "type": "integer",
                        "exclusiveMinimum": 0,
                        "default": 20
                      }
                    },
                    "required": [
                      "type"
                    ],
                    "additionalProperties": false
                  },
                  "filterable": {
                    "type": "array",
                    "items": {
                      "anyOf": [
                        {
                          "type": "string"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "field": {
                              "type": "string"
                            },
                            "ops": {
                              "type": "array",
                              "items": {
                                "type": "string",
                                "enum": [
                                  "eq",
                                  "ne",
                                  "in",
                                  "lt",
                                  "lte",
                                  "gt",
                                  "gte",
                                  "contains",
                                  "startsWith",
                                  "endsWith",
                                  "between"
                                ]
                              }
                            },
                            "enum": {
                              "type": "array",
                              "items": {
                                "type": "string"
                              }
                            }
                          },
                          "required": [
                            "field",
                            "ops"
                          ],
                          "additionalProperties": false
                        }
                      ]
                    }
                  },
                  "sortable": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "defaultSort": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "field": {
                          "type": "string"
                        },
                        "dir": {
                          "type": "string",
                          "enum": [
                            "asc",
                            "desc"
                          ]
                        }
                      },
                      "required": [
                        "field",
                        "dir"
                      ],
                      "additionalProperties": false
                    }
                  },
                  "search": {
                    "type": "object",
                    "properties": {
                      "fields": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "strategy": {
                        "type": "string",
                        "enum": [
                          "fulltext",
                          "like",
                          "trigram"
                        ]
                      }
                    },
                    "required": [
                      "fields"
                    ],
                    "additionalProperties": false
                  }
                },
                "required": [
                  "pagination",
                  "filterable",
                  "sortable"
                ],
                "additionalProperties": false
              },
              "detail": {
                "type": "object",
                "properties": {
                  "relations": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "additionalProperties": false
              },
              "mutations": {
                "type": "object",
                "properties": {
                  "create": {
                    "type": "boolean",
                    "default": false
                  },
                  "update": {
                    "type": "boolean",
                    "default": false
                  },
                  "delete": {
                    "type": "boolean",
                    "default": false
                  }
                },
                "additionalProperties": false
              },
              "fields": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "readRoles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "writeRoles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        }
      },
      "required": [
        "version",
        "models"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}