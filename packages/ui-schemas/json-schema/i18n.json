{
  "$ref": "#/definitions/i18n",
  "definitions": {
    "i18n": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "pluralRules": {
          "type": "string",
          "enum": [
            "simple",
            "icu"
          ],
          "default": "simple"
        },
        "defaultLocale": {
          "type": "string"
        },
        "locales": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "code": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "messages": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              },
              "formats": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "object",
                    "properties": {
                      "short": {
                        "type": "string"
                      },
                      "medium": {
                        "type": "string"
                      },
                      "long": {
                        "type": "string"
                      },
                      "full": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "number": {
                    "type": "object",
                    "properties": {
                      "decimal": {
                        "type": "string"
                      },
                      "thousands": {
                        "type": "string"
                      },
                      "currency": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            },
            "required": [
              "code",
              "name",
              "messages"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "version",
        "defaultLocale",
        "locales"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}