{
  "name": "blog",
  "displayName": "Blog Template",
  "version": "1.0.0",
  "description": "Full-featured blog with posts, comments, and authors",
  "minSdkVersion": "1.0.0",
  "tokenSet": "ssot-tokens@1",
  "router": "nextjs-app",
  
  "requiredModels": [
    {
      "template": "user",
      "description": "User/Author model for blog posts",
      "requiredFields": [
        {
          "template": "id",
          "type": "Int | String",
          "description": "Unique identifier"
        },
        {
          "template": "name",
          "type": "String",
          "description": "Display name for the author"
        }
      ],
      "optionalFields": [
        {
          "template": "email",
          "type": "String?",
          "description": "Author email (for Gravatar)"
        },
        {
          "template": "avatar",
          "type": "String?",
          "description": "Profile image URL"
        },
        {
          "template": "bio",
          "type": "String?",
          "description": "Author biography"
        }
      ]
    },
    {
      "template": "post",
      "description": "Blog post model",
      "requiredFields": [
        {
          "template": "id",
          "type": "Int | String",
          "description": "Unique identifier"
        },
        {
          "template": "title",
          "type": "String",
          "description": "Post title"
        },
        {
          "template": "content",
          "type": "String",
          "description": "Post content (markdown/HTML)"
        },
        {
          "template": "author",
          "type": "User",
          "description": "Relation to user model"
        },
        {
          "template": "createdAt",
          "type": "DateTime",
          "description": "Publication date"
        }
      ],
      "optionalFields": [
        {
          "template": "excerpt",
          "type": "String?",
          "description": "Short summary"
        },
        {
          "template": "slug",
          "type": "String?",
          "description": "URL-friendly identifier"
        },
        {
          "template": "published",
          "type": "Boolean?",
          "description": "Publication status"
        },
        {
          "template": "coverImage",
          "type": "String?",
          "description": "Featured image URL"
        },
        {
          "template": "tags",
          "type": "String[]?",
          "description": "Post categories/tags"
        }
      ]
    },
    {
      "template": "comment",
      "description": "Blog comment model",
      "requiredFields": [
        {
          "template": "id",
          "type": "Int | String",
          "description": "Unique identifier"
        },
        {
          "template": "content",
          "type": "String",
          "description": "Comment text"
        },
        {
          "template": "author",
          "type": "User",
          "description": "Comment author"
        },
        {
          "template": "post",
          "type": "Post",
          "description": "Associated post"
        },
        {
          "template": "createdAt",
          "type": "DateTime",
          "description": "Comment timestamp"
        }
      ],
      "optionalFields": []
    }
  ],
  
  "featureFlags": {
    "auth": true,
    "comments": true,
    "search": true,
    "seo": true,
    "richText": true
  },
  
  "pages": [
    "/",
    "/posts",
    "/posts/[slug]",
    "/authors/[id]",
    "/admin/posts",
    "/admin/posts/new",
    "/admin/posts/[id]/edit"
  ]
}

