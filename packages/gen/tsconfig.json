{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/pipeline/*": ["pipeline/*"],
      "@/generators/*": ["generators/*"],
      "@/analyzers/*": ["analyzers/*"],
      "@/utils/*": ["utils/*"],
      "@/plugins/*": ["plugins/*"],
      "@/templates/*": ["templates/*"],
      "@/database/*": ["database/*"],
      "@/api/*": ["api/*"],
      "@/cache/*": ["cache/*"],
      "@/validation/*": ["validation/*"],
      "@/builders/*": ["builders/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/__tests__",
    "src/**/*.test.ts",
    "src/api/examples"
  ]
}