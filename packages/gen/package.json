{
  "name": "@ssot-codegen/gen",
  "version": "0.4.0",
  "description": "Code generation engine for SSOT Codegen",
  "author": "SSOT Codegen Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ssot-codegen/ssot-codegen"
  },
  "keywords": [
    "prisma",
    "codegen",
    "code-generation",
    "typescript",
    "api",
    "rest",
    "crud"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./api": {
      "types": "./dist/api/index.d.ts",
      "import": "./dist/api/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:test": "pnpm build && pnpm test:validate",
    "prepublishOnly": "pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:validate": "vitest run src/generators/__tests__/generated-code-validation.test.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:all": "vitest run && vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@prisma/generator-helper": "^5.22.0",
    "@prisma/internals": "^5.22.0",
    "p-limit": "^5.0.0",
    "prettier": "^3.2.0"
  },
  "peerDependencies": {
    "prisma": "^5.0.0"
  },
  "devDependencies": {
    "@ssot-codegen/core": "workspace:*",
    "@types/prettier": "^2.7.3",
    "@vitest/coverage-v8": "^2.1.0",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.9.0",
    "vitest": "^2.1.0"
  }
}
