{
  "name": "create-ssot-app",
  "version": "0.4.0",
  "description": "Create a full-stack TypeScript API with Prisma in one command",
  "type": "module",
  "bin": {
    "create-ssot-app": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "vitest run e2e-ui-generation",
    "test:e2e-simple": "vitest run e2e-ui-generation-simple",
    "test:e2e-v3": "vitest run e2e-v3-runtime",
    "test:blog": "vitest run e2e-blog-generation",
    "test:chatbot": "vitest run e2e-chatbot-generation",
    "test:chatbot-ai": "vitest run e2e-chatbot-with-openai"
  },
  "keywords": [
    "prisma",
    "api",
    "codegen",
    "typescript",
    "express",
    "fastify",
    "scaffolding"
  ],
  "author": "SSOT CodeGen",
  "license": "MIT",
  "dependencies": {
    "picocolors": "^1.0.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "typescript": "^5.3.3",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

