{
  "name": "ssot-codegen",
  "private": true,
  "version": "0.4.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r --filter ./packages/* run build",
    "clean": "rimraf packages/*/dist",
    "lint": "eslint \"packages/*/src/**/*.ts\"",
    "lint:fix": "eslint \"packages/*/src/**/*.ts\" --fix",
    "typecheck": "pnpm -r --filter ./packages/* exec tsc --noEmit",
    "knip": "knip",
    "madge": "madge --circular --extensions ts packages/gen/src",
    "validate:barrels": "node scripts/validate-barrels.js",
    "check:all": "pnpm run typecheck && pnpm run lint && pnpm run knip && pnpm run madge",
    "ssot": "node packages/cli/dist/cli.js",
    "examples:all": "pnpm run examples:minimal && pnpm run examples:blog && pnpm run examples:ecommerce && pnpm run examples:ai-chat",
    "examples:minimal": "cd examples/minimal && pnpm run generate",
    "examples:blog": "cd examples/blog-example && pnpm run generate",
    "examples:ecommerce": "cd examples/ecommerce-example && pnpm run generate",
    "examples:ai-chat": "cd examples/ai-chat-example && pnpm run generate",
    "test:examples": "pnpm run test:minimal && pnpm run test:blog && pnpm run test:ecommerce && pnpm run test:ai-chat",
    "test:minimal": "cd examples/minimal && pnpm run test",
    "test:blog": "cd examples/blog-example && pnpm run test",
    "test:ecommerce": "cd examples/ecommerce-example && pnpm run test",
    "test:ai-chat": "cd examples/ai-chat-example && pnpm run test",
    "test:generator": "cd packages/gen && pnpm test",
    "test:generated": "node scripts/test-generated.js",
    "full-test": "pnpm run build && pnpm run lint && pnpm test:generator && pnpm run test:generated"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "knip": "^5.67.1",
    "madge": "^8.0.0",
    "prisma": "^5.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.4.0"
  }
}