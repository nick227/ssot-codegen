{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "paths": {
      "@gen/*": ["./gen/*"],
      "@/*": ["./src/*"],
      "@ssot-codegen/sdk-runtime": ["../../packages/sdk-runtime/dist"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*", "gen/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "tests/**/*", "../../packages/**/*"]
}

